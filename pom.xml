<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>dk.statsbiblioteket.mediaplatform</groupId>
    <artifactId>bitrepository-url-client</artifactId>
    <version>0.3-SNAPSHOT</version>

  <parent>
    <groupId>dk.statsbiblioteket.sbprojects</groupId>
    <artifactId>sbprojects-parent</artifactId>
    <version>3</version>
  </parent>

  <repositories>
    <repository>
      <id>sbprojects-nexus</id>
      <url>https://sbprojects.statsbiblioteket.dk/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  
  <scm>
    <url>https://github.com/mikisseth/bitrepository-url-client</url>
    <connection>scm:git:git://github.com/mikisseth/bitrepository-url-client.git</connection>
    <developerConnection>scm:git:git@github.com:mikisseth/bitrepository-url-client.git</developerConnection>
  </scm>

    <dependencies>
      <dependency>
        <groupId>org.json</groupId>
        <artifactId>json</artifactId>
        <version>20090211</version>
      </dependency>
      <dependency>
        <groupId>org.bitrepository.reference</groupId>
        <artifactId>bitrepository-core</artifactId>
        <version>${bitrepository-version}</version>
      </dependency>
      <dependency>
        <groupId>org.bitrepository.reference</groupId>
        <artifactId>bitrepository-modifying-client</artifactId>
        <version>${bitrepository-version}</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>jul-to-slf4j</artifactId>
        <version>${slf4j.version}</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>log4j-over-slf4j</artifactId>
        <version>${slf4j.version}</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>jcl-over-slf4j</artifactId>
        <version>${slf4j.version}</version>
      </dependency>
    </dependencies>
    
    <properties>
      <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
      <bitrepository-version>0.13</bitrepository-version>
      <slf4j.version>1.6.4</slf4j.version>
  </properties>
</project>
